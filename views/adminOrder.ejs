<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Orders</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        body {
            background-color: #9dc9f5;
            padding-top: 20px;
        }
        .card {
            margin-bottom: 20px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            transition: box-shadow 0.3s ease;
        }
        .card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }
        .card-text {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <nav
      class="navbar navbar-expand-lg navbar-light bg-primary"
      style="position: sticky"
    >
      <div class="container">
        <a class="navbar-brand" href="#">Pouya Bookstore</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item mx-3">
              <a class="nav-link" href="/admin/books"
                ><i class="fas fa-shopping-cart"></i> Books</a
              >
            </li>

            <li class="nav-item mx-3">
              <a class="nav-link" href="/admin/orders"
                ><i class="fas fa-clipboard-list"></i> Orders</a
              >
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link" href="/admin/signout"
                ><i class="fas fa-sign-out-alt"></i> Sign Out</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
        <h1 class="text-center mb-4">Orders of Customers</h1>
        <div class="row">
            <% orders.forEach(order => { %>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Placed By: <%= order.customer.name %></h5>
                            <p class="card-text">Order Date: <%= order.date %></p>
                            <% order.books.forEach(book => { %>
                                <p class="card-text"><strong>Book Name:</strong> <%= book.name %></p>
                                <p class="card-text"><strong>ISBN:</strong> <%= book.ISBN %></p>
                            <% }); %>
                            <p class="card-text"><strong>Total Bill:</strong> <%= order.total %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="/js/bootstrap.min.js"></script>
	<script>
		
	</script>
</body>
</html>
